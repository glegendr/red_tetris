{
  "name": "red-tetris",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "client-dev": "webpack-dev-server --open --mode development",
    "client-build": "webpack ./src/client/index.tsx ",
    "srv-dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server/main.ts",
    "srv-dist": "npm run client-build && ts-node -r tsconfig-paths/register ./src/server/main.ts",
    "test-client": "mocha -r ts-node/register -r tsconfig-paths/register test/client/*Test.ts",
    "test-server": "mocha -r ts-node/register -r tsconfig-paths/register test/server/*Test.ts",
    "test-common": "mocha -r ts-node/register -r tsconfig-paths/register test/common/*Test.ts",
    "test-all": "npm run test-client && npm run test-server && npm run test-common",
    "coverage": "nyc npm run test-all",
    "predeploy": "npm run client-build",
    "deploy": "gh-pages -d build"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/express": "^4.17.0",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@types/react-redux": "^6.0.20",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "^5.1.25",
    "@types/webpack-env": "^1.14.0",
    "babel-core": "^7.0.0-beta.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "express": "^4.17.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.19.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-gamepad": "^1.0.3",
    "react-redux": "^8.0.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^6.3.0",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-react-hook": "^3.3.2",
    "redux-thunk": "^2.4.1",
    "rxjs": "^6.5.2",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "styled-components": "^5.3.5",
    "ts-loader": "^5.4.5",
    "tslib": "^2.4.0",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@types/chai": "^4.2.11",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/react-gamepad": "^1.0.3",
    "@types/redux-logger": "^3.0.9",
    "babel-cli": "^6.26.0",
    "babel-watch": "^7.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^5.3.0",
    "chai-equal-jsx": "^1.0.9",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "gh-pages": "^1.2.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.12.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "style-loader": "^0.20.3",
    "ts-node": "^7.0.1",
